default_platform(:ios)

platform :ios do
  desc "Build the iOS app for development"
  lane :build do
    cocoapods
    
    build_app(
      workspace: "digbiz5.xcworkspace",
      scheme: "digbiz5",
      configuration: "Debug",
      output_directory: "./build",
      output_name: "digbiz5.ipa",
      export_method: "development",
      skip_package_ipa: false
    )
  end

  desc "Build and upload to TestFlight"
  lane :beta do
    cocoapods
    
    increment_build_number(xcodeproj: "digbiz5.xcodeproj")
    
    build_app(
      workspace: "digbiz5.xcworkspace",
      scheme: "digbiz5",
      configuration: "Release",
      output_directory: "./build",
      output_name: "digbiz5.ipa"
    )
    
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end

  desc "Build and upload to App Store"
  lane :release do
    cocoapods
    
    increment_build_number(xcodeproj: "digbiz5.xcodeproj")
    
    build_app(
      workspace: "digbiz5.xcworkspace",
      scheme: "digbiz5",
      configuration: "Release",
      output_directory: "./build",
      output_name: "digbiz5.ipa"
    )
    
    upload_to_app_store(
      force: true,
      skip_metadata: false,
      skip_screenshots: false
    )
  end

  desc "Run tests"
  lane :test do
    cocoapods
    
    run_tests(
      workspace: "digbiz5.xcworkspace",
      scheme: "digbiz5",
      device: "iPhone 15"
    )
  end
end